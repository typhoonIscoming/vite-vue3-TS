# EditorConfig is awesome: https://EditorConfig.org

# 顶层配置文件，不会继续往上查找
root = true

# 所有文件的默认配置
[*]
charset = utf-8
end_of_line = lf
indent_style = tab
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

# 针对 Markdown 文件的特殊配置
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# 针对 package.json 或 .yml 等特殊文件使用2空格缩进
[{package.json,*.yml,*.yaml}]
indent_style = space
indent_size = 2